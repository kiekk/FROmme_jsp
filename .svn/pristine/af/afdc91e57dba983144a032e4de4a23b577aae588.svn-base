function onClick(obj) {
	console.log(obj.id);
	switch (obj.id) {
		case 'today':
			todayChart1();
			break;
		case 'week':
			weekChart();
			break;
		default:
			break;
	}
}



window.onload = () => {
	todayChart1();
}

